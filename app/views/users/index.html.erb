<h2>Your Friend Requests!</h2>
<ul>
<%# show all friendships, friend or pending %>
  <% @friend_requests.each do |friend_request| %>
  <li>
    <%= friend_request.user.username %>
    <%= link_to "See Profile", user_path(friend_request.user) %>
    <div>
      <%= button_to "Accept" %>
      <%= button_to "Reject" %>
    </div>
  </li>
  <% end %>
</ul>

<h2>Your Pending Friends!</h2>
<ul>
<%# show all friendships, friend or pending %>
  <% @pending_friends.each do |friend| %>
  <li><%= friend.username %>
    <%= link_to "See Profile", user_path(friend) %>
  </li>
  <% end %>
</ul>

