<h2>Your Friend Requests!</h2>
<ul>
<%# show all friendships, friend or pending %>
  <% @friend_requests.each do |friend_request| %>
  <li>
    <%= render "shared/user", :user => friend_request.user %>
    <div>
      <%= button_to "Accept", friend_request_path(friend_request.id), method: "put" %>
      <%= button_to "Reject", friend_request_path(friend_request.id), method: "delete"  %>
    </div>
  </li>
  <% end %>
</ul>

