<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="card text-bg-primary bg-opacity-50 p-2 mb-2 shadow">
        <h3>Hey <%=current_user.username%>, edit your profile!</h3>
        <%= form_with model: @profile do |form| %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, class: "form-control text-bg-primary" %>
          </li>
          <li class="list-group-item">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :gray_shirt %>
            <%= form.text_field :gray_shirt, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :birthday %>
            <%= form.date_field :birthday, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :hometown %>
            <%= form.text_field :hometown, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :occupation %>
            <%= form.text_field :occupation, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :quote, "Favorite Quote" %>
            <%= form.text_field :quote, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :other_info, "Cigar Walk Story" %>
            <%= form.text_area :other_info, class: "form-control text-bg-primary"  %>
          </li>
          <li class="list-group-item">
            <%= form.label :profile_picture, "Profile Picture" %>
            <%= form.file_field :profile_picture, class: "form-control text-bg-primary" %>
          </li>
          </ul>
          <%= form.submit "Update Profile", class: "btn btn-primary mt-2" %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>