<h3><%= link_to post.author.username, user_path(post.author) %></h3>
<p><%= post.body %></p>
<div>
  <% if post.liked?(current_user) %>
    <%= button_to "like", like_path(post), method: "put", disabled: true %>
  <% else %>
    <%= button_to "like", like_path(post), method: "put" %>
  <% end %>
  <p><%= post.likes.count %> likes</p>
</div>
<ul>
  <% post.comments.each do |comment| %>
    <li>
      <%= render "shared/comment", :comment => comment %>
    </li>
  <% end %>
  <li>
    <%= render "shared/comment_form", :comment => @comment, :post => post %>
  </li>
</ul>
<%= link_to "See full post", post_path(post) %>